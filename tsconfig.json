{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2020"],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@logger/*": ["src/logger/index"]
    },
    "forceConsistentCasingInFileNames": true
  }
}
